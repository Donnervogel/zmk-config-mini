/dts-v1/;
/ {
    chosen {
        zmk,kscan = &default_kscan;
    };

    default_kscan: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "default_kscan";

        input-gpios = <&pico_gpio 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    pico_gpio: gpio {
        compatible = "raspberrypi,pico-gpio";
        gpio-controller;
        #gpio-cells = <2>;
    };
};
